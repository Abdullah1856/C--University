/* With Out Decimals in Division */

#include <iostream>
using namespace std;

int main() {
int a, b, c, d, e, f;
cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
c = a + b;
d = a - b;
e = a * b;
f = a / b;
cout<<"addition is "<<c<<endl;
cout<<"minus is "<<d<<endl;
cout<<"multiplication is "<<d<<endl;
cout<<"division is "<<f<<endl;
}



/* With Decimals Division */
#include <iostream>
using namespace std;

int main() {
    int a, b, c, d, e;
    float f;

    cout << "Enter the first number: ";
    cin >> a;

    cout << "Enter the second number: ";
    cin >> b;

    c = a + b;
    d = a - b;
    e = a * b;
    f = static_cast<float>(a) / b; // Ensuring floating-point division

    cout << "Addition is " << c << endl;
    cout << "Subtraction is " << d << endl;
    cout << "Multiplication is " << e << endl;
    cout << "Division is " << f << endl;

    return 0;
}
