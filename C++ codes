/* Assigments Operators */
#include <iostream>
using namespace std;

int main() {
    int ans = 27;
    
ans += 10;
cout << "answer is " << ans << endl;

ans -=7;
cout << "answer is " << ans << endl;

ans *=2;
cout << "answer is " << ans << endl;

ans /=3;
cout << "answer is " << ans << endl;

ans %=3;
cout << "answer is " << ans << endl;

    return 0;
}

/How to find Root */
#include <iostream>
#include <math.h>
using namespace std;

int main() {
    int value;
    cout << "Enter the value: ";
    cin >> value;

    // Example usage of a math function
    squareRoot = sqrt(value);
    cout << "Square root of " << value << " is: " << squareRoot << endl;

    return 0;
}


/* Finding the smallest Number */
#include <iostream>
using namespace std;

int main() {
    int value1, value2, value3;
    cout << "Enter the First value: ";
    cin >> value1;
    
    cout << "Enter the Second value: ";
    cin >> value2;
    
    cout << "Enter the Third value: ";
    cin >> value3;

if(value1 <= value2 && value1 <= value3 ) {
		cout<<"Value1 is smallest";
	}
	else if(value2 <= value1 && value2 <= value3){
	cout<<"Value2 is smallest";
	} 
	else if(value3 <= value1 && value3 <= value2){
	cout<<"Value3 is smallest";
	}else{
		cout<<"all values are same";
	}
	
	return 0;
}
