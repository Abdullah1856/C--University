/* With Out Decimals in Division */

#include <iostream>
using namespace std;

int main() {
int a, b, c, d, e, f;
cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
c = a + b;
d = a - b;
e = a * b;
f = a / b;
cout<<"addition is "<<c<<endl;
cout<<"minus is "<<d<<endl;
cout<<"multiplication is "<<d<<endl;
cout<<"division is "<<f<<endl;
}



/* With Decimals Division */
#include <iostream>
using namespace std;

int main() {
    int a, b, c, d, e;
    float f;

    cout << "Enter the first number: ";
    cin >> a;

    cout << "Enter the second number: ";
    cin >> b;

    c = a + b;
    d = a - b;
    e = a * b;
    f = static_cast<float>(a) / b; // Ensuring floating-point division

    cout << "Addition is " << c << endl;
    cout << "Subtraction is " << d << endl;
    cout << "Multiplication is " << e << endl;
    cout << "Division is " << f << endl;

    return 0;
}


/* With Multi Functions */
#include <iostream>
using namespace std;

int main() {
float a, b, c, d, e, f, j, h, i;

cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
cout<<"Enter the third number \n";
cin>>j;
cout<<"Enter the fourth number \n";
cin>>h;
cout<<"Enter the fifth number \n";
cin>>i;
c = a + b + j + h + i;
d = a - b - j - h - i;
e = a * b * j * h * i;
f = a / b / j / h / i;
cout<<"addition is "<<c<<endl;
cout<<"minus is "<<d<<endl;
cout<<"multiplication is "<<d<<endl;
cout<<"division is "<<f<<endl;
}


/* With Multi Functions More Organized */

#include <iostream>
using namespace std;

int main() {
float a, b, c, d, e, add, sub, multi, divi;

cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
cout<<"Enter the third number \n";
cin>>c;
cout<<"Enter the fourth number \n";
cin>>d;
cout<<"Enter the fifth number \n";
cin>>e;
add = a + b + c + d + e;
sub = a - b - c - d - e;
multi = a * b * c * d * e;
divi = a / b / c / d / e;
cout<<"addition is "<<add<<endl;
cout<<"minus is "<<sub<<endl;
cout<<"multiplication is "<<multi<<endl;
cout<<"division is "<<divi<<endl;
}
