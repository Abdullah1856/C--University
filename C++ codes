/* With Out Decimals in Division */

#include <iostream>
using namespace std;

int main() {
int a, b, c, d, e, f;
cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
c = a + b;
d = a - b;
e = a * b;
f = a / b;
cout<<"addition is "<<c<<endl;
cout<<"minus is "<<d<<endl;
cout<<"multiplication is "<<d<<endl;
cout<<"division is "<<f<<endl;
}



/* With Decimals Division */
#include <iostream>
using namespace std;

int main() {
    int a, b, c, d, e;
    float f;

    cout << "Enter the first number: ";
    cin >> a;

    cout << "Enter the second number: ";
    cin >> b;

    c = a + b;
    d = a - b;
    e = a * b;
    f = static_cast<float>(a) / b; // Ensuring floating-point division

    cout << "Addition is " << c << endl;
    cout << "Subtraction is " << d << endl;
    cout << "Multiplication is " << e << endl;
    cout << "Division is " << f << endl;

    return 0;
}


/* With Multi Functions */
#include <iostream>
using namespace std;

int main() {
float a, b, c, d, e, f, j, h, i;

cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
cout<<"Enter the third number \n";
cin>>j;
cout<<"Enter the fourth number \n";
cin>>h;
cout<<"Enter the fifth number \n";
cin>>i;
c = a + b + j + h + i;
d = a - b - j - h - i;
e = a * b * j * h * i;
f = a / b / j / h / i;
cout<<"addition is "<<c<<endl;
cout<<"minus is "<<d<<endl;
cout<<"multiplication is "<<d<<endl;
cout<<"division is "<<f<<endl;
}


/* With Multi Functions More Organized */

#include <iostream>
using namespace std;

int main() {
float a, b, c, d, e, add, sub, multi, divi;

cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
cout<<"Enter the third number \n";
cin>>c;
cout<<"Enter the fourth number \n";
cin>>d;
cout<<"Enter the fifth number \n";
cin>>e;
add = a + b + c + d + e;
sub = a - b - c - d - e;
multi = a * b * c * d * e;
divi = a / b / c / d / e;
cout<<"addition is "<<add<<endl;
cout<<"minus is "<<sub<<endl;
cout<<"multiplication is "<<multi<<endl;
cout<<"division is "<<divi<<endl;
}



/* With Multi Functions More Organized With Reminder*/
#include <iostream>
using namespace std;

int main() {
int a, b, add, sub, multi;
float divi, reminder;
//int reminder;

cout<<"Enter the first number \n";
cin>>a;
cout<<"Enter the second number \n";
cin>>b;
add = a + b;
sub = a - b;
multi = a * b;
divi = (float)a / b;
//divi = float (a / b);
//divi = static_cast<float>(a) / b;
reminder = a % b;
cout<<"addition is "<<add<<endl;
cout<<"minus is "<<sub<<endl;
cout<<"multiplication is "<<multi<<endl;
cout<<"division is "<<divi<<endl;
cout<<"division is "<<reminder<<endl;
}


/* Area Of Reactangle */
#include <iostream>
using namespace std;

int main() {
int height, width, area;

cout<<"Enter the width of a rectangle \n";
cin>>height;
cout<<"Enter the height of a rectangle \n";
cin>>width;
area = height * width;
cout<<"area of rectangle is "<<area<<endl;
}


/* Area Of Reactangle with Perimeter */

#include <iostream>
using namespace std;

int main() {
int height, width, area, perimeter;

cout<<"Enter the width of a rectangle \n";
cin>>height;
cout<<"Enter the height of a rectangle \n";
cin>>width;
area = height * width;
perimeter = 2 * (height + width);
cout<<"area of rectangle is "<<area<<endl;
cout<<"Perimeter of rectangle is "<<perimeter<<endl;
}


/* Circle-Radius */
#include <iostream>
using namespace std;

int main() {
float radius, area, circum;
const float pi = 3.14159;
cout<<"Enter the radius of a circle \n";
cin>>radius;
area = pi * radius * radius;
cout<<"area of circle is "<<radius<<endl;
circum=2*pi*radius;
cout<<"circum of circle is "<<circum<<endl;
}


/* Farhaint to celcius */
#include <iostream>
using namespace std;

int main() {
float celcius, fahrenhiet;
cout<<"Enter the temperature in fahrenhiet \n";
cin>>fahrenhiet;
celcius = (fahrenhiet - 32) * 5 / 9;
cout<<"temperature in celcius is "<<celcius<<endl;
}



/* Swaps */
#include <iostream>
using namespace std;

int main() {
int a, b, c;
cout<<"Enter the value of a \n";
cin>>a;
cout<<"Enter the value of b \n";
cin>>b;
c = a; 
a = b;
b = c;
cout<<"value one is "<<c<<endl;
cout<<"value two is "<<a<<endl;
cout<<"value one is "<<b<<endl;
}
